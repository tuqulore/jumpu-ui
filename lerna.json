{
  "version": "1.0.0",
  "npmClient": "yarn",
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org"
    },
    "version": {
      "allowBranch": ["main", "develop"],
      "conventionalCommits": true,
      "createRelease": "github"
    }
  }
}
