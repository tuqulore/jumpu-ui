{
  "$schema": "https://raw.githubusercontent.com/lerna-lite/lerna-lite/main/packages/cli/schemas/lerna-schema.json",
  "version": "2.0.0-alpha.3",
  "npmClient": "pnpm",
  "packages": [
    "./",
    "packages/*"
  ],
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org"
    },
    "version": {
      "allowBranch": [
        "release"
      ],
      "noChangelog": true
    }
  }
}
