{
  "version": "1.0.1-alpha.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org"
    },
    "version": {
      "allowBranch": ["chore-release"],
      "conventionalCommits": true
    }
  }
}
